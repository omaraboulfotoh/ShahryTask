<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <data>

        <variable
            name="author"
            type="com.shahrytask.network.model.responses.AuthorModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/lighter_grey"
        app:cardCornerRadius="4dp"
        app:contentPadding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                app:imageUrlCircle="@{author.avatarUrl}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAuthorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="start|center_vertical"
                android:text="@{author.name}"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="@dimen/fontSizeMediumLarge"
                app:layout_constraintStart_toEndOf="@+id/ivAvatar"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="محمد فريد" />

            <TextView
                android:id="@+id/tvAddressNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="start|center_vertical"
                android:text="@{author.email}"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="@dimen/fontSizeMediumSmall"
                app:layout_constraintStart_toStartOf="@id/tvAuthorName"
                app:layout_constraintTop_toBottomOf="@+id/tvAuthorName"
                tools:text="+20 01012345678" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>