<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/homeFragment"
    tools:ignore="ExtraText">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.shahrytask.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_postsFragment"
            app:destination="@id/postsFragment" />
    </fragment>

    <fragment
        android:id="@+id/postsFragment"
        android:name="com.example.shahrytask.ui.posts.AuthorPostsFragment"
        android:label="AuthorPostsFragment"
        tools:layout="@layout/fragment_author_posts" />
</navigation>